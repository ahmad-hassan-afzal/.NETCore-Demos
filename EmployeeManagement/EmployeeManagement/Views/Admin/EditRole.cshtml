@model EditRoleViewModel

@{ 
    ViewBag.Title = "Edit Role";
}

<h1>Edit Role</h1>

<form method="post" asp-action="EditRole">
    <div class="mb-3 row">
        <label asp-for="RoleId" class="col-sm-2 col-form-label">Role ID</label>
        <div class="col-sm-10">
            <input asp-for="RoleId" class="form-control disabled">
        </div>
    </div>
    <div class="mb-3 row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label">Role Name</label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control">
        </div>
    </div>
    <div class="card my-1">
        <div class="card-header">
            Users in this Role
        </div>
        <div class="card-body">
            @if (Model.Users != null)
            {
                foreach (var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">No User Found for this role</h5>
            }


        </div>
        <div class="card-footer">
            <a asp-controller="Admin" asp-action="EditUsersInRole" asp-route-roleId="@Model.RoleId"
               class="btn btn-outline-warning">Edit Users</a>
        </div>
    </div>
    <button type="submit" class="btn btn-outline-primary">Modify Role</button>
    <a asp-action="ListRoles" class="btn btn-outline-primary">Cancel</a>
</form>
