@model CreateRoleViewModel

@{
    ViewBag.Title = "Create New Role";
}

<h1>Create New Role</h1>
<form method="post" asp-action="CreateRole" asp-controller="Admin">
    <div class="mb-3">
        <label asp-for="RoleName" class="form-label">Role Name</label>
        <input asp-for="RoleName" class="form-control">
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-outline-primary">Create Role</button>
</form>