@model EditUserViewModel

@{
    ViewBag.Title = "Edit User";
}

<h1>Edit User</h1>

<form method="post" asp-action="EditUser">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3 row">
        <label asp-for="Id" class="col-sm-2 col-form-label">Role ID</label>
        <div class="col-sm-10">
            <input asp-for="Id" class="form-control" readonly>
        </div>
    </div>
    <div class="mb-3 row">
        <label asp-for="Email" class="col-sm-2 col-form-label">Username</label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="mb-3 row">
        <label asp-for="City" class="col-sm-2 col-form-label">City</label>
        <div class="col-sm-10">
            <input asp-for="City" class="form-control">
        </div>
    </div>

    <button type="submit" class="btn btn-outline-primary">Update</button>
    <a asp-action="ListUsers" class="btn btn-outline-secondary">Cancel</a>


    <div class="card my-1">
        <div class="card-header">
            User's Roles
        </div>
        <div class="card-body">
            @if (Model.Roles.Any())
            {
                foreach (var role in Model.Roles)
                {
                    <h5 class="card-title">@role</h5>
                }
            }
            else
            {
                <h5 class="card-title">No role assigned yet</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-action="ManageUserRoles" asp-controller="Admin" asp-route-userId="@Model.Id" class="btn btn-outline-warning">Manage Roles</a>

        </div>
    </div>

    <div class="card my-1">
        <div class="card-header">
            User's Claims
        </div>
        <div class="card-body">
            @if (Model.Claims.Any())
            {
                foreach (var claim in Model.Claims)
                {
                    <h5 class="card-title">@claim</h5>
                }
            }
            else
            {
                <h5 class="card-title">No claim found.</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-action="ManageUserClaims" asp-controller="Admin" asp-route-id="@Model.Id" class="btn btn-outline-warning">Manage Claims</a>
        </div>
    </div>


</form>
